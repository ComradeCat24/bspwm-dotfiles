## Script To Manage Brightness For Archcraft.

# icons
iDIR='/usr/share/archcraft/icons/dunst'

# Graphics card
CARD=`ls /sys/class/backlight | head -n 1`

# Get brightness
get_backlight() {
	if [[ "$CARD" == *"intel_"* ]]; then
		BNESS=`xbacklight -get`
		LIGHT=${BNESS%.*}
	else
		LIGHT=$(printf "%.0f\n" `light -G`)
	fi
	echo "${LIGHT}%"
}

# Get icons
get_icon() {
	backlight="$(get_backlight)"
	current="${backlight%%%}"
	if [[ ("$current" -ge "0") && ("$current" -le "20") ]]; then
		icon="$iDIR"/brightness-20.png
	elif [[ ("$current" -ge "20") && ("$current" -le "40") ]]; then
		icon="$iDIR"/brightness-40.png
	elif [[ ("$current" -ge "40") && ("$current" -le "60") ]]; then
		icon="$iDIR"/brightness-60.png
	elif [[ ("$current" -ge "60") && ("$current" -le "80") ]]; then
		icon="$iDIR"/brightness-80.png
	elif [[ ("$current" -ge "80") && ("$current" -le "100") ]]; then
		icon="$iDIR"/brightness-100.png
	fi
}

# Notify 
notify_bl() {
	get_icon && dunstify -u low --replace=69 -i "$icon" "Brightness : $(get_backlight)"
}

# Increase brightness
inc_backlight() {
	backlight="$(get_backlight)"
	current="${backlight%%%}"
	if [[ ("$current" -lt "5") ]]; then
		if [[ "$CARD" == *"intel_"* ]]; then
			xbacklight -inc 1 && notify_bl
		else
			light -A 1 && notify_bl
		fi
	else 
		if [[ "$CARD" == *"intel_"* ]]; then
			xbacklight -inc 5 && notify_bl
		else
			light -A 5 && notify_bl
		fi
	fi
}

# Decrease brightness
dec_backlight() {
	backlight="$(get_backlight)"
	current="${backlight%%%}"
	if [[ ("$current" -le "5") ]]; then
		if [[ "$CARD" == *"intel_"* ]]; then
			xbacklight -dec 1 && notify_bl
		else
			light -U 1 && notify_bl
		fi
	else 
		if [[ "$CARD" == *"intel_"* ]]; then
			xbacklight -dec 5 && notify_bl
		else
			light -U 5 && notify_bl
		fi
	fi
}

# Execute accordingly
if [[ "$1" == "--get" ]]; then
	get_backlight
elif [[ "$1" == "--inc" ]]; then
	inc_backlight
elif [[ "$1" == "--dec" ]]; then
	dec_backlight
else
	get_backlight
fi
